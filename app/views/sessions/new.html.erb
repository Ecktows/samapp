<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <h3><%= f.label :email %></h3>
      <h3><%= f.text_field :email %></h3>

      <h3><%= f.label :password %></h3>
      <h3><%= f.password_field :password %></h3>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <h3><p>New user? <%= link_to "Sign up now!", signup_path %></p></h3> 
  </div>
</div>


